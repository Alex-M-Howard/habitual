{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "userId": {
      "type": "number"
    },
    "date": {
      "type": "string",
      "format": "date-time",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "entry": {
      "type": "string",
      "minLength": 4,
      "maxLength": 3000
    }
  },
  "additionalProperties": true,
  "required": ["userId", "entry"]
}
